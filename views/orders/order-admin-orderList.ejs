<%- include('../partials/header') %>
<h1> full list of oders that came in for Amin to see</h1>

<h1> Current Orders </h1>
<% if (orders.length) { %>
<table id="orderList">
    <thead>
        <tr>
            <th>no.</th>
          <th>Customer Name</th>
          <th>Customer Phone</th>
          <th>PickupLocation</th>
          <th>Product</th>
          <th>Quantity</th>
          <th>Total $</th>
        </tr>
      </thead>
        <tbody>
          <% orders.forEach(function(order) { %>
          <tr>
            <td><%= orders.length %></td>
            <td><%= order.product_name %></td>
            <td><%= order.product_type %></td>
            <td><%= order.product_flavor %></td>
            <td><%= order.price %></td>
          </tr>
          <% }); %>
        </tbody>
    </table>
    <% } else { %>
    <h5>No Customer ordered Yet</h5>
    <% } %>
