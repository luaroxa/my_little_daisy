<%- include('../partials/header') %>
<h5>Menu</h5>
<br />
<div id="menu">
  <div class="containerMenu">
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <img
            src="/images/img13.jpg"
            class="img-fluid rounded-start"
            alt="..."
          />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Canele</h5>
            <p class="card-text">
              <small class="text-muted"> $ <%= caneles[0].price %> each</small>
            </p>
            <div class="right">
              <div class="price">Flavours:</div>
              <div class="flavour">
                <% caneles.forEach(function(product) { %> <%=
                product.productFlavor %> <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Basque Cheese Cake</h5>
            <p class="card-text">
              <small class="text-muted">
                $ <%= cheeseCake[0].price %> each</small
              >
            </p>
            <div class="right">
              <div class="price">Flavours:</div>
              <div class="flavour">
                <% cheeseCake.forEach(function(product) { %> <%=
                product.productFlavor %> <% }) %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <img
            src="/images/img7.jpg"
            class="img-fluid rounded-start"
            alt="..."
          />
        </div>
      </div>
    </div>
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <img
            src="/images/img10.jpg"
            class="img-fluid rounded-start"
            alt="..."
          />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Ugly Cookie</h5>
            <p class="card-text">
              <small class="text-muted"> $ <%= cookies[0].price %> each</small>
            </p>
            <div class="right">
              <div class="price"></div>
              <div class="price">Flavours:</div>
              <div class="flavour">
                <% cookies.forEach(function(product) { %> <%=
                product.productFlavor %> <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="orderBtn">
      <a href="/orders" class="btn btn-warning">o r d e r</a>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
