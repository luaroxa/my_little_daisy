<%- include('./partials/header') %>

<br><br>
<br><br>
<h2>Welcome back Admin!</h2>
<br><br>

<h1>Current Product List</h1>
<table class="table table-striped" id="productList">
  <thead> 
    <tr>
      <th>Product Name</th>
      <th>Product Type</th>
      <th>Product Flavour</th>
      <th>Price</th>
      <th>Remove</th>
    </tr>
  </thead>
  <tbody>
    <% product.forEach(function(product) { %>
    <tr>
      <td><%= product.productName %></td>
      <td><%= product.productType %></td>
      <td><%= product.productFlavor %></td>
      <td><%= product.price %></td>
      <td>
          <form action="/products-current/<%=product.id %>?_method=DELETE" method="POST" class="secondary-content">
            <button type="submit" class="btn-small red-text">X</button>
          </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>

<h1>New product? Add below</h1>

<form
  method="POST"
  action="/products-current"
  class="form-horizontal"
  id="new_product"
>
  <div class="form-group text-center col-sm-5 customerForm">
    <label for="productName" class="col-sm-5 form-label">
      Product Name
    </label>
      <input
        id="productName"
        type="text"
        name="productName"
        class="form-control"
        placeholder="product-flavour"
      />
  </div>

  <div class="form-group text-center col-sm-5">
    <label for="productType" class="col-sm-5 form-label">
      Product Type
    </label>
      <select class="col-sm-5" id="productType" name="productType">
        <option value="Cheese Cake">Cheese Cake</option>
        <option value="Ugly Cookie">Ugly Cookie</option>
        <option value="Canele">Canele</option>
      </select>
  </div>

  <div class="form-group text-center col-sm-5">
    <label for="productFlavor" class="col-sm-5 form-label">
      Product Flavor</label>
      <input
        id="productFlavor"
        name="productFlavor"
        type="string"
        class="form-control"
      />
  </div>

  <div class="form-group text-center col-sm-5">
    <label for="price" class="col-sm-5 form-label"> Price </label>
      <input id="price" name="price" type="number" class="form-control" />
    </div>
<div>
  <button type="submit" class="btn btn-warning">Submit</button>
</div>
 
</form>

